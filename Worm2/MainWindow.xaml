<Window x:Name="MainForm" x:Class="Worm2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Worm2"
        mc:Ignorable="d"
        Title="MainWindow" Height="805" Width="1200" Loaded="MainForm_Loaded" BorderBrush="#FF6A6A6A" MinWidth="1200" MinHeight="805" ScrollViewer.VerticalScrollBarVisibility="Disabled" ResizeMode="CanMinimize">
    <StackPanel Margin="0,0,0,0" Orientation="Horizontal">
        <StackPanel Orientation="Vertical" Margin="0,10,0,0">
            <Button x:Name="bStart" Margin="0" Click="Button_Click" HorizontalAlignment="Center" Width="90">Start</Button>
            <Label x:Name="lblDirection" Content="North" HorizontalAlignment="Center" Margin="0,0,0,0" Height="26" />
            <Label x:Name="lblLifes" Content="0" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            <Label x:Name="lblDist" Content="0" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>
        <Canvas Name="Field" Background="#FFE0F9F7" Margin="5,0,0,0" MinHeight="800" Height="800" Width="1140" />

    </StackPanel>
</Window>
